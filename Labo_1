#include <iostream>
using namespace std;
#define pi 3.14

int quadcalc(int &a, int &b, int r)
{
    if (r == 0)
    {
        return(a * b);
    }
    else
    {
        return((a + b) * 2);
    }
}

int circlecalc(int r, int &d)
{
    if (r == 2)
    {
        return(pi * d);
    }
}

int stcalc()
{
    if (a and b > 0)
    {
        
    }
}

int main()
{
    int a,b,d;
    bool r;
    cout << "выбор функций: 0 = нахождение площади прямоугольника 1 = периметр его" << endl;
    cin >> r;
    if (r == 1 or 0)
    {
        cout << "введите а и b" << endl;
        cin >> a >> b;
        cout << quadcalc(a,b,r) << endl;
    }
    else if (r == 2)
    {
        cout << "введите диаметр окружности" << endl;
        cin >> d;
        cout << circlecalc(r,d) << endl;
    }
    return 0;
}
