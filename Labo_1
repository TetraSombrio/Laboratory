#include <iostream>
#include <cmath>
using namespace std;
#define pi 3.14

int f1quest(int &a, int &b, int r)
{
    if (r == 0)
    {
        return(a * b);
    }
    else
    {
        return((a + b) * 2);
    }
}

int f2quest(int r, int &d)
{
    if (r == 2)
    {
        cout << (pi * d) << endl;
    }
}

int f3quest(int &a, int &b)
{
    if (r == 3)
    {
        cout << ((a+b)/2) << endl;
    }
}

int f4quest(int a, int b)
{
    int re1,re2,re3;
    if (a and b > 0) and (r == 4)
    {
        cout << a+b << a-b << a*b << endl;
        re4 = a^2/b^2;
        cout << re4 << endl;
    }
}

int f5quest(int a, int b)
{
    if (a and b > 0) and (r == 4)
    {
        int re5;
        cout << abs(a)+abs(b) << abs(a)-abs(b) << abs(a)*abs(b) << endl;
        re5 = abs(a)/abs(b);
        cout << re4 << endl;
    }
}

int main()
{
    int a,b,d;
    bool r;
    cout << "выбор функций: 0 = нахождение площади прямоугольника 1 = периметр его" << endl;
    cin >> r;
    if (r == 1 or 0)
    {
        cout << "введите а и b" << endl;
        cin >> a >> b;
        cout << quadcalc(a,b,r) << endl;
    }
    else if (r == 2)
    {
        cout << "введите диаметр окружности" << endl;
        cin >> d;
        cout << circlecalc(r,d) << endl;
    }
    return 0;
}
