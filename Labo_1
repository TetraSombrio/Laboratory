#include <iostream>
#include <cmath>
using namespace std;
#define pi 3.14

int f1quest(int &a, int &b, int r)
{
    if (r == 0)
    {
        return(a * b);
    }
    else
    {
        return((a + b) * 2);
    }
}

int f2quest(int d, int r)
{
    if (r == 2)
    {
        cout << (pi * d) << endl;
    }
}

int f3quest(int a, int b, int r)
{
    if (r == 3)
    {
        cout << ((a+b)/2) << endl;
    }
}

int f4quest(int a, int b, int r)
{
    int res;
    if (a>0 and b>0 and r == 4)
    {
        cout << a+b << a-b << a*b << endl;
        res = a^2/b^2;
        cout << res << endl;
    }
}

int f5quest(int a, int b, int r)
{
    int res;
    if (a>0 and b>0 and r == 4)
    {
        cout << abs(a)+abs(b) << abs(a)-abs(b) << abs(a)*abs(b) << endl;
        res = abs(a)/abs(b);
        cout << res << endl;
    }
}

int main()
{
    int a,b,d;
    bool r;
    cout << "выбор функций нахождения: 0=площадь прямоугл. 1=периметр прямоугл. 2=длинна окр. 3=ср арифм. 4=комплект1." << endl;
    cin >> r;
    if (r == 1 or 0)
    {
        cout << "введите а и b" << endl;
        cin >> a >> b;
        cout << f1quest(a,b,r) << endl;
    }
    else if (r == 2)
    {
        cout << "введите диаметр окружности" << endl;
        cin >> d;
        cout << f2quest(r, d) << endl;
    }
    else if (r == 3)
    {
        cout << "введите а,b" << endl;
        cin >> a >> b;
        cout << f3quest(a,b,r) << endl;
    }
    else if (r == 4)
    {
        cout << "введите а,b" << endl;
        cin >> a >> b;
        cout << f4quest << endl;
    }
    return 0;
}
