void f6()
{  
    unsigned int numb;
    unsigned long fact=1;//long for larger numbers  
    while(numb != 0)
    {
        cout << "Enter a number: ";
        cin >> numb;//get number
        if(numb == 0) return;
        else cout << endl;
    }
    
    for(int j=numb; j>0; j--)//multiply 1 by
    {
        fact *= j;//numb, numb-1, ..., 2, 1
    }
    cout << "Factorial is " << fact << endl;
    return;
}

double f7()
{
    double na4vklad, percent;
    int years;
    
    cout << "enter sum of start capital" << endl;
    cin >> na4vklad;
    double reserv_na4vklad = na4vklad;
    cout << "enter year count" << endl;
    cin >> years;
    cout << "enter percent(11.8'%' = 11.8)" << endl;
    cin >> percent;
    percent /= 100;
    
    for(years; years >= 0; years--)
    {
        na4vklad += (na4vklad * percent);
    }
    double r = na4vklad;
    return r;
}

class EngPounds
{
    private:
        int pnd;
        int shlng;
        int pny;
        
        void calcpennyinpounds()
        {
            pny = pny - 240;
            ++pnd;
        }
        
        void calcpennyinshillings()
        {
            pny = pny - 12;
            ++shlng;
        }
        
        void calcshillingsinpounds()
        {
            shlng = shlng - 20;
            ++pnd;
        }
    public:
        void printvalues()
        {
            cout << "pounds = " << pnd << endl;
            cout << "shillings = " << shlng << endl;
            cout << "penny = " << pny << endl;
        }
        
        void recalc()
        {
            if((pny != 0)&&(pny >= 240))
            {
                calcpennyinpounds();
            }
            if((pny != 0)&&(pny >= 12))
            {
                calcpennyinshillings();
            }
            if((shlng != 0)&&(shlng >= 20))
            {
                calcshillingsinpounds();
            }
        }
        
        void entervalues()
        {
            cout << "enter values of pounds, shillings, pences" << endl;
            cin >> pnd >> shlng >> pny;
        }
};

void f8()
{
    string r;
    do
    {
        cout << "" << endl;
        EngPounds enpounds;
        enpounds.entervalues();
        enpounds.recalc();
        enpounds.printvalues();
        cout << "continue?(y/n)" << endl;
        cin >> r;
    }
    while(r == "y");
}

int main()
{
    f6();
    f7();
    cout << f7() << endl;
    f8();
    return 0;
}
