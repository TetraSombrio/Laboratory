class EngPounds
{
    private:
        int pnd;
        int shlng;
        int pny;
        
        int calcpennywithpounds()
        {
            pny = pnd * 240;
            return pny;
        }
        
        int calcpennywithshillings()
        {
            pny = shlng * 12;
            return pny;
        }
        
        int calcshillingswithpounds()
        {
            shlng = pnd * 20;
            return shlng;
        }
    public:
        void printvalues()
        {
            cout << "pounds = " << pnd << endl;
            cout << "shillings = " << shlng << endl;
            cout << "penny = " << pny << endl;
        }
        
        float entervalues(pound, shillings, penny)
        {
            pnd = pound;
            shlng = shillings;
            pny = penny;
        }
};

