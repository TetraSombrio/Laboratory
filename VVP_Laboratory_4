#include <iostream>
#include <cmath>
using namespace std;
//кароче выбираем функцию, вводим данные, и оно считает

int f1quest(int a, int b, int r)
{
    if (r == 0)
    {
        return(a * b);
    }
    else
    {
        return((a + b) * 2);
    }
}

int f2quest(int d, int r)
{
    float pi = 3.14;
    if (r == 2)
    {
        return(float(pi * d));
    }
}

int f3quest(int a, int b, int r)
{
    if (r == 3)
    {
        return((a+b)/2);
    }
}

float f4quest(float a, float b, int r, int num2)
{
    if (a!=0 and b!=0 and r == 4)
    {
        float res[4] = {};
        res[0] = pow(a, 2)+pow(b, 2);
        res[1] = pow(a, 2)-pow(b, 2);
        res[2] = pow(a, 2)*pow(b, 2);
        res[3] = pow(a, 2)/pow(b, 2);
        return(res[num2]);
    }
}

float f5quest(float a, float b, int r, int num)
{
    if (a!=0 and b!=0 and r == 5)
    {
        float res[4] = {};
        res[0] = (a)+(b);
        res[1] = (a)-(b);
        res[2] = abs(a)*abs(b);
        res[3] = abs(a)/abs(b);
        return(res[num]);
    }
    else{
        cout << "ошибка, вы ввели нулевые числа" << endl;
        return 0;
    }
}

int main()
{
    float a,b,d;
    int r,num, num2;
    num2 = 0;
    num = 0;
    
    cout << "выбор задания: 1(0 и 1 подзадания) 2 3 4 5" << endl;
    cin >> r;//ввод r определяет номер функции, которую вызовет программа
    
    if (r == 0)//тут тупо перебор имеющихся значений. Так как это программа не для конечного пользователя, то системы защиты делать я не стал.
    {
        cout << "нахождение площади прямоугольника" << endl << "введите а и b" << endl;
        cin >> a >> b;
        cout << "Площадь прямоугольника = " << f1quest(a,b,r) << endl;
    }
    
    if (r == 1)
    {
        cout << "нахождение периметра прямоугольника" << endl << "введите а и b" << endl;
        cin >> a >> b;
        cout << "Периметр прямоугольника = " << f1quest(a,b,r) << endl;
    }
    
    else if (r == 2)
    {
        cout << "нахождение длинны окружности" << endl << "введите диаметр окружности" << endl;
        cin >> d;
        cout << "Длинна окр = " << f2quest(r,d) << endl;
    }
    
    else if (r == 3)
    {
        cout << "нахождение ср.арифм" << endl << "введите а и b" << endl;
        cin >> a >> b;
        cout << "ср.арифм = " << f3quest(a,b,r) << endl;
    }
    
    else if (r == 4)
    {
        cout << "введите а,b укажите а после номер действия(+ - * ^)" << endl;
        cin >> a >> b;
        cin >> num2;
        cout << "   " << f4quest(a, b, r, num2) << endl;
    }
    
    else if (r == 5)
    {
        cout << "введите а,b, а после укажите номер действия(+ - * /)" << endl;
        cin >> a >> b;
        cin >> num;
        cout << "   " << f5quest(a, b, r, num) << endl;
    }
    return 0;
}
