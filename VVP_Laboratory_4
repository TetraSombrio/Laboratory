#include <iostream>
#include <cmath>
using namespace std;
#define pi 3.14
//кароче выбираем функцию, вводим данные, и оно считает
//

int f1quest(int a, int b, int r)
{
    if (r == 0)
    {
        return(a * b);
    }
    else
    {
        return((a + b) * 2);
    }
}

int f2quest(int &d, int r)
{
    if (r == 2)
    {
        return(pi * d);
    }
}

int f3quest(int a, int b, int r)
{
    if (r == 3)
    {
        return((a+b)/2);
    }
}

float f4quest(float a, float b, int r, int num2)
{
    if (a>0 and b>0 and r == 4)
    {
        float res[4] = {};
        res[0] = a+b;
        res[1] = a-b;
        res[2] = a*b;
        res[3] = pow(a, 2)/pow(b, 2);
        return(res[num2]);
    }
}

float f5quest(float a, float b, int r, int num)
{
    if (a>0 and b>0 and r == 5)
    {
        float res[4] = {};
        res[0] = abs(a)+abs(b);
        res[1] = abs(a)-abs(b);
        res[2] = abs(a)*abs(b);
        res[3] = abs(a)/abs(b);
        return(res[num]);
    }
}
int main()
{
    float a,b,d;
    int r,num, num2;
    cout << "выбор функций нахождения: 0=площадь прямоугл. 1=периметр прямоугл. 2=длинна окр." << endl;
    cout << "3=ср арифм. 4=комплект1. 5=комплект2" << endl;
    cin >> r;//ввод r определяет номер функции, которую вызовет программа
    if (r == 1 or 0)//тут тупо перебор имеющихся значений. Так как это программа не для конечного пользователя, то системы защиты делать я не стал.
    {
        cout << "введите а и b" << endl;
        cin >> a >> b;
        cout << f1quest(a,b,r) << endl;
    }
    else if (r == 2)
    {
        cout << "введите диаметр окружности" << endl;
        cin >> d;
        cout << f2quest(r,d) << endl;
    }
    else if (r == 3)
    {
        cout << "введите а и b" << endl;
        cin >> a >> b;
        cout << f3quest(a,b,r) << endl;
    }
    else if (r == 4)
    {
        cout << "введите а,b" << endl;
        cin >> a >> b;
        cin >> num2;
        cout << f4quest(a, b, r, num2) << endl;
    }
    else if (r == 5)
    {
        cin >> a >> b;
        cin >> num;
        cout << f5quest(a, b, r, num) << endl;
    }
    return 0;
}
