#include <iostream>
#include <cmath>
using namespace std;

float q1(float x1, float x2, float y1, float y2, float r)
{
    cout << sqrt(pow((x2 - x1),2) + pow((y2 - y1),2)) << endl;//нахождение длинны отрезка по формуле
}

float q2(float x1, float x2, float x3, float y1, float y2, float y3, float r)
{
    int resp[3];
    cout << (sqrt(pow((x2 - x1),2) + pow((y2 - y1),2))) + (sqrt(pow((x3 - x2),2) + pow((y3 - y2),2))) << endl;
    cout << sqrt(pow((x2 - x1),2) + pow((y2 - y1),2)) << endl;
    cout << sqrt(pow((x3 - x2),2) + pow((y3 - y2),2)) << endl;
}

int q4(float x1, float x2, float y1, float y2, float r)
{
    float le1,le2;
    le1 = x2 - x1;
    le2 = y2 - y1;
    
    cout << le1 * 2 + le2 * 2 << le1 * le2 << endl;
}

