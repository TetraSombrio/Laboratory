#include <iostream>
#include <cmath>
using namespace std;

void q1(float x1, float x2, float y1, float y2)
{
    cout << sqrt(pow((x2 - x1),2) + pow((y2 - y1),2)) << endl;//нахождение длинны отрезка по формуле
}

void q2(float x1, float x2, float y1, float y2)
{
    float ac,bc;
    ac = abs(x2 - x1);
    bc = abs(x3 - x2);
    cout << "отрезок ас = " << ac << "\nотрезок bc = " << bc << endl;
    cout << "ac + bc = " << ac + bc << endl;
}

void q3(float x1, float x2, float x3)// ACB точки. Именно в таком порядке.
{
    if (((x3 - x2) <= 0) and ((x2 - x1) <= 0))
    {
        cout << "Гуманитарий, сказали же, 2 точка между 1 и 3." << endl;
    }
    float ac,bc;
    ac = abs(x2 - x1);
    bc = abs(x3 - x2);
    cout << "ac * bc = " << ac * bc << endl;
}

void q4(float x1, float x2, float y1, float y2)
{
    float le1,le2;
    le1 = x2 - x1;
    le2 = y2 - y1;
    
    cout << "периметр прямоугольника = " << le1 * 2 + le2 * 2 << "площадь прямоугольника = " << le1 * le2 << endl;
}

void q5(float x1, float x2, float x3, float y1, float y2, float y3)
{
    float a, b, c, p;
    a = sqrt((x1 * x1) + (y1 * y1));//отдельно считает длину вектора
    b = sqrt((x2 * x2) + (y2 * y2));
    c = sqrt((x3 * x3) + (y3 * y3));
    p = (a + b + c) / 2;//костыль для формулы Герона
    cout << sqrt(p * ((p - a) * (p - b) * (p - c))) << endl;//сама формула Герона
}

int main()
{
    int selector;
    float x1,x2,x3,y1,y2,y3;
    cout << "выберите задание введя его номер: 1, 2, 3, 4, 5" << endl;
    cin >> selector;
    cout << "\n" << endl;
    if (selector == (1 or 4 or 5))
    {
        cout << "последовательно введите все переменные, сначала x, потом y" << endl;
        cin >> x1 >> y1 >> x2 >> y2 >> x3 >> y3;
    }
    else if (selector == 2)
    {
        cin >> x1 >> y1 >> x2 >> y2;
    }
    else if (selector == 3)
    {
        cout << "Введите точку A, B, C, так, что бы точка C была МЕЖДУ A и B" << endl;
        cin >> x1 >> x3 >> x2;
    }
    switch(selector)
    {
    case 1:
        //вывести расстояние между точками
        q1(x1,x2,y1,y2);
        break;
    case 2:
        //вывести длинны и сумму отрезков
        q2(x1,x2,y1,y2);
        break;
    case 3:
        //вывести произведение длин отрезков
        q3(x1,x2,x3);
        break;
    case 4:
        //вывести периметр и площадь прямоугольника
        q4(x1,x2,y1,y2);
        break;
    case 5:
        //вывести периметр и площадь треугольника
        q5(x1,x2,x3,y1,y2,y3);
        break;
    }
}
